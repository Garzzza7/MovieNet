<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:visibility="visible"
    tools:context=".MyListViewModel">
    <TextView
        android:id="@+id/textView"
        android:layout_width="413dp"
        android:layout_height="152dp"
        android:background="#8a1524"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="46dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toTopOf="@+id/FilmListID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/ExploreID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/FilmListID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:text="Films"
        android:textColor="@color/white"

        android:focusable="true"
        android:clickable="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ExploreID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="120dp"
        android:text="Explore"
        android:textColor="@color/white"

        android:focusable="true"
        android:clickable="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MYListID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="116dp"
        android:clickable="true"
        android:focusable="true"

        android:text="My List"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 March"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1"
        app:layout_constraintTop_toBottomOf="@id/textView"/>

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviewed by: Finny Ster"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1"
        app:layout_constraintTop_toBottomOf="@id/Date"/>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="138dp"
        android:layout_height="209dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserName"
        app:srcCompat="@drawable/placehorder" />

    <TextView
        android:id="@+id/Date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="5 January"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1"
        app:layout_constraintTop_toBottomOf="@id/imageButton1" />

    <TextView
        android:id="@+id/UserName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviewed by: James Cameron"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1"
        app:layout_constraintTop_toBottomOf="@id/Date2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="138dp"
        android:layout_height="209dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/UserName2"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1"
        app:srcCompat="@drawable/placehorder"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="138dp"
        android:layout_height="209dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@id/imageButton2"
        app:layout_constraintTop_toBottomOf="@id/UserName2"
        app:srcCompat="@drawable/placehorder" />

</androidx.constraintlayout.widget.ConstraintLayout>